@model Assignment

<form method="post" asp-action="Complete" enctype="multipart/form-data">
    <div class="col-md-4">
        <div class="card mb-4 box-shadow">
            <div class="card-body">
                <p class="card-text">Treść: @Model.Body</p>
                <p class="card-text">Data zadania: @Model.DateOfAssignment</p>
                <button type="submit" class="btn btn-primary">Potwierdź zakończenie zadania</button>
                <div class="d-flex justify-content-between align-items-center"></div>
            </div>
        </div>
    </div>
</form>