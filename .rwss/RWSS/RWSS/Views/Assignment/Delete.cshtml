@model Assignment

<h1>Na pewno chcesz usunąć to zadanie?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" value="AppUserId" id="AppUserId" />
    <div class="form-group">
        <label asp-for="Body">Tytuł</label>
        <input asp-for="Body" class="form-control" placeholder="Tytuł">
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfAssignment" class="control-label"></label>
        <input asp-for="DateOfAssignment" class="form-control" />
        <span asp-validation-for="DateOfAssignment" class="text-danger"></span>
    </div>
</form>
<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Zatwierdź" class="btn btn-danger float-right mt-3" />
    </form>
</div>