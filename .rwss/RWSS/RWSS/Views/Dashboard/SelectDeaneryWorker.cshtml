@model IEnumerable<DeaneryWorker>

<section class="jumbotron text-center">
    <div class="container-jumbotron">
        <h1 class="jumbotron-heading">Panel użytkownika</h1>
                        <div id="line-dashboard" class="line"></div>
                <p id="jumbotron-description-dashboard" class="jumbotron-description">Pulpit nawigacyjny zapewnia cenne informacje i narzędzia, które pomagają efektywnie zarządzać kontem. Podejmij działania już teraz, aby zoptymalizować swoje doświadczenia i jak najlepiej wykorzystać usługę.</p>
                <div id="jumbotron-dashboard-btn" class="btn-container">
                            <a href="#dashboard-label-id" class="my-butt">Start</a>
                    <a href="#contact-footer" class="my-butt">Kontakt</a>
                </div>
    </div>
</section>

<section class="board">
    <div class="board-container">
        <h1 id="dashboard-label-id" class="dashboard-label">Wybierz pracownika dziekanatu</h1>
        <div class="form-group-container">
<div>
    <div>
        <div id="selectDeaneryWorker-container-task">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <p class="card-text">Imię: @item.AppUser.FirstName</p>
                            <p class="card-text">Nazwisko: @item.AppUser.LastName</p>
                            <p class="card-text">Pozycja: @item.PositionCategory</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn=success" asp-controller="Dashboard" asp-action="SendEmail" asp-route-id="@item.AppUser.Id"
                                       class="btn btn-sm btn-outline-secondary">Wyślij wiadomość</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
</div>
</div>
</section>
