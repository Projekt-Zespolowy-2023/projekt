@using RWSS.ViewModels.Duties
@model EditDutyViewModel

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Body">Treść</label>
        <input asp-for="Body" class="form-control" placeholder="Tytuł">
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DayOfWeek" class="control-label">Dzień dyżuru</label>
        <input asp-for="DayOfWeek" class="form-control" />
        <span asp-validation-for="DayOfWeek" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TimeOfDuty" class="control-label">Godzina rozpoczęcia dyżuru</label>
        <input asp-for="TimeOfDuty" class="form-control" />
        <span asp-validation-for="TimeOfDuty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndingTime" class="control-label">Godzina zakończenia dyżuru</label>
        <input asp-for="EndingTime" class="form-control" />
        <span asp-validation-for="EndingTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zatwierdź</button>
</form>