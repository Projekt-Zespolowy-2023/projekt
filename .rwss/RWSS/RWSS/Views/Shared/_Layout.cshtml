                </div>
            </div>
        </section>

<!-- ten JavaScript sprawia, że zdjęcia same się zmieniają ale niestaty my już ich zmieniać nie możemy jak bez tego kodu -->
    <script>
        // Pobranie wszystkich elementów <img> z klasą "slider"
        const slides = document.querySelectorAll('.slider img');

        // Początkowy indeks slajdu
        let currentSlide = 0;

        // Funkcja, która przełącza slajdy
        function nextSlide() {
            // Ukrycie aktualnego slajdu
            slides[currentSlide].style.display = 'none';

            // Zwiększenie indeksu slajdu
            currentSlide = (currentSlide + 1) % slides.length;

            // Wyświetlenie następnego slajdu
            slides[currentSlide].style.display = 'block';
        }

        // Uruchomienie funkcji nextSlide co 6500ms
        setInterval(nextSlide, 6500);
    </script>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--footer view-->
