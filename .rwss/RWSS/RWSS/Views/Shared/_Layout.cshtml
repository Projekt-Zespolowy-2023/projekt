            <a href="https://www.instagram.com/rwss_mfi_umcs/" target="_blank" class="icon-link"><img src="/assets/icons/instagram.png" alt="Instagram"></a>
            <a href="https://www.umcs.pl/pl/o-nas,26760.htm" target="_blank" class="icon-link"><img src="/assets/icons/website.png" alt="Strona internetowa"></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
