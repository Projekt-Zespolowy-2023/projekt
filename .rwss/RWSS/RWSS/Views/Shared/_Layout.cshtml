                <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">RWSS</a>
            </div>
            <button id="hidden-btn" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
            </button>
            <div class="navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="item" asp-area="" asp-controller="Home" asp-action="Index">Strona Domowa</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="item" asp-area="" asp-controller="Dashboard" asp-action="Index">Panel</a>
                        </li>
                        <li class="nav-item">
                            <form asp-area="" asp-controller="Account" asp-action="Logout">
                                <button id="logout-btn">Wyloguj się</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="item" asp-area="" asp-controller="Account" asp-action="Login">Zaloguj się</a>
                        </li>
                        <li class="nav-item">
                            <a class="item" asp-area="" asp-controller="Account" asp-action="Register">Rejestracja</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

        <section class="slider-container">
            <div class="slider-wrapper">
                <div class="slider">
                <img id="slide-1" src="/assets/img/img_1.jpg" alt="zdjecie1">
                    <img id="slide-2" src="/assets/img/img_2.png" alt="zdjecie2">
                    <img id="slide-3" src="/assets/img/img_3.jpg" alt="zdjecie3">
                    <img id="slide-4" src="/assets/img/pan_pawel.jpg" alt="zdjecie4">
                    <img id="slide-5" src="/assets/img/img_4.jpg" alt="zdjecie5">
                    <img id="slide-6" src="/assets/img/img_5.jpg" alt="zdjecie6">
                    <img id="slide-7" src="/assets/img/img_6.jpg" alt="zdjecie7">
                    <img id="slide-8" src="/assets/img/img_7.jpg" alt="zdjecie8">
                    <img id="slide-9" src="/assets/img/img_8.jpg" alt="zdjecie9">
                    <img id="slide-10" src="/assets/img/img_9.jpg" alt="zdjecie10">
                    <img id="slide-11" src="/assets/img/img_10.jpg" alt="zdjecie11">
                    <img id="slide-12" src="/assets/img/img_11.jpg" alt="zdjecie12">
                    <img id="slide-13" src="/assets/img/img_12.jpg" alt="zdjecie13">
                    <img id="slide-14" src="/assets/img/img_13.jpg" alt="zdjecie14">
                </div>
                <div class="slider-nav">
                    <a href="#slide-1"></a>
                    <a href="#slide-2"></a>
                    <a href="#slide-3"></a>
                    <a href="#slide-4"></a>
                    <a href="#slide-5"></a>
                    <a href="#slide-6"></a>
                    <a href="#slide-7"></a>
                    <a href="#slide-8"></a>
                    <a href="#slide-9"></a>
                    <a href="#slide-10"></a>
                    <a href="#slide-11"></a>
                    <a href="#slide-12"></a>
                    <a href="#slide-13"></a>
